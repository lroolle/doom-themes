{
  "name": "doom-themes",
  "displayName": "Doom Themes",
  "description": "A faithful port of the popular Doom Emacs doom-one theme to VS Code. Includes both dark and light variants inspired by Atom One Dark/Light.",
  "version": "1.0.0",
  "publisher": "lroolle",
  "icon": "doom-themes-icon-128.png",
  "author": {
    "name": "Doom One Theme Contributors"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lroolle/doom-one-theme"
  },
  "keywords": [
    "theme",
    "vscode theme",
    "cursor theme",
    "dark",
    "light",
    "doom",
    "emacs",
    "doomemacs",
    "atom",
    "one dark",
    "one light",
    "syntax highlighting"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "galleryBanner": {
    "color": "#282c34",
    "theme": "dark"
  },
  "contributes": {
    "themes": [
      {
        "label": "Doom One Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/doom-one-dark-color-theme.json"
      },
      {
        "label": "Doom One Light",
        "uiTheme": "vs",
        "path": "./themes/doom-one-light-color-theme.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "vscode:prepublish": "echo 'No build step required for theme extensions'"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.0.0"
  }
}
